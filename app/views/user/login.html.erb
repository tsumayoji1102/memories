

 <div class="py-5 text-center col-lg-4 offset-lg-4 loginform">
  <div class="width-decider">
  <%= form_tag("/login/check") do %>
  <form class="form-signin">
    <img class="mb-4" src="../images/bootstrap-solid.svg" alt="" width="72" height="72">
    <h1 class="h3 mb-3 font-weight-normal">こちらからログイン</h1>
    <label for="inputEmail" class="sr-only">Emailアドレス</label>
    <input type="email" id="inputEmail" class="form-control" placeholder="Emailアドレス" name="login_email" required autofocus>
    <label for="inputPassword" class="sr-only">パスワード</label>
    <input type="password" id="inputPassword" class="form-control" placeholder="パスワード" name="login_password" required>
    <div class="form-check mb-3">
      <input class="form-check-input" type="checkbox" value="remember-me" id="rememberCheck">
      <label class="form-check-label" for="rememberCheck">
        状態を記憶する
      </label>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">ログイン</button>
    <p class="mt-5 mb-3 text-muted"　><%= link_to("会員登録はこちら", "/signup") %></p>
    <p class="mt-5 mb-3 text-muted">&copy; 2017-2019</p>
  </form>
  <% end %>
  </div>
  </div>
